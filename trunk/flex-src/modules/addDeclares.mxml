<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" width="100%" height="100%"  horizontalAlign="center" horizontalScrollPolicy="off">
	<mx:HBox x="0" y="0" width="100%" height="100%">
		<mx:Form width="100%" height="100%"  paddingLeft="50" horizontalScrollPolicy="off">
			<mx:FormHeading label="添加科研项目"  paddingLeft="50" fontSize="15" width="447" textAlign="left"/>
			<mx:FormItem label="项目编号：" >
				<mx:HBox><mx:TextInput width="300"/><mx:Label text="*添加项目编号"/></mx:HBox>
			</mx:FormItem>
			<mx:FormItem label="项目名称：" >
				<mx:HBox><mx:TextInput width="300"/><mx:Label text="*添加项目名称"/></mx:HBox>
			</mx:FormItem>
			<mx:FormItem label="课题名称：">
				<mx:HBox><mx:TextInput width="300"/><mx:Label text="*添加课题名称"/></mx:HBox>
			</mx:FormItem>
			<mx:FormItem label="职称：">
				<mx:HBox><mx:TextInput width="300"/><mx:Label text="*添加职称"/></mx:HBox>
			</mx:FormItem>
			<mx:FormItem label="所属部门：">
				<mx:HBox><mx:TextInput width="300"/><mx:Label text="*添加所属部门"/></mx:HBox>
			</mx:FormItem>
			<mx:FormItem label="负责人：" horizontalAlign="left">
				<mx:HBox><mx:TextInput width="300" /><mx:Label text="*添加负责人"/></mx:HBox>
			</mx:FormItem>
			<mx:FormItem label="联系电话：">
				<mx:HBox><mx:TextInput width="300"/><mx:Label text="*添加联系电话"/></mx:HBox>
			</mx:FormItem>
			<mx:FormItem label="申报表：">
				<mx:HBox><mx:TextInput width="300"/><mx:Label text="*添加申报表"/></mx:HBox>
			</mx:FormItem>
			<mx:FormItem label="申报时间：">
				<mx:HBox><mx:TextInput width="300"/><mx:Label text="*添加申报时间"/></mx:HBox>
			</mx:FormItem>
			<mx:FormItem label="申报经费：">
				<mx:HBox><mx:TextInput width="300"/><mx:Label text="*添加申报经费"/></mx:HBox>
			</mx:FormItem>
			<mx:FormItem label="是否批准：">
				<mx:HBox>
					<mx:RadioButton groupName="checkGroup" label="是" selected="true"/>
					<mx:RadioButton groupName="checkGroup" label="否"/>
					<mx:RadioButtonGroup id="allowGroup"/>
					<mx:Label text="是否鉴定"/>
				</mx:HBox>
			</mx:FormItem>
			<mx:FormItem label="批准时间：">
				<mx:HBox><mx:TextInput width="300"/><mx:Label text="*添加批准时间"/></mx:HBox>
			</mx:FormItem>
			<mx:FormItem label="批准经费：">
				<mx:HBox><mx:TextInput width="300"/><mx:Label text="*添加批准经费"/></mx:HBox>
			</mx:FormItem>
			<mx:FormItem label="合同时间：">
				<mx:HBox><mx:TextInput width="300"/><mx:Label text="*添加合同时间"/></mx:HBox>
			</mx:FormItem>
			<mx:FormItem label="合同内容：">
				<mx:HBox><mx:TextInput width="300"/><mx:Label text="*添加合同内容"/></mx:HBox>
			</mx:FormItem>
			<mx:FormItem label="是否结题：">
				<mx:HBox>
					<mx:RadioButton groupName="allowGroup" label="是" selected="true"/>
					<mx:RadioButton groupName="allowGroup" label="否"/>
					<mx:RadioButtonGroup id="checkGroup"/>
					<mx:Label text="是否结题"/>
				</mx:HBox>
			</mx:FormItem>	
			<mx:FormItem label="结题时间：">
				<mx:HBox><mx:TextInput width="300"/><mx:Label text="*添加结题时间"/></mx:HBox>
			</mx:FormItem>
			<mx:FormItem label="鉴定技术负责人：">
				<mx:HBox><mx:TextInput width="300"/><mx:Label text="*添加鉴定技术负责人"/></mx:HBox>
			</mx:FormItem>
			<mx:FormItem label="成果效益：">
				<mx:HBox><mx:TextInput width="300"/><mx:Label text="*添加成果效益"/></mx:HBox>
			</mx:FormItem>																		
			<mx:FormItem label="备注：">
				<mx:HBox><mx:TextArea width="300" height="80"/><mx:Label text="*添加备注"/></mx:HBox>
			</mx:FormItem>
			<mx:FormItem  width="369">
				<mx:HBox>
					<mx:Button label="添加">		</mx:Button><mx:Button label="重新添加">		</mx:Button>
				</mx:HBox>
			</mx:FormItem>			
		</mx:Form>
	</mx:HBox>
	
</mx:Module>
